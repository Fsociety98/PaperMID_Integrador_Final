@model PaperMID.BO.EmpresaBO
@{
    ViewBag.Title = "ActualizarEmpresa";
    Layout = "~/Views/Master/_LayoutAdministrador.cshtml";
}
<div class="ajax-content container-fluid">
    <section class="content-header">
        <h1>
            Empresa
        </h1>
    </section>
    <section class="content container-fluid">
        <div class="row">
            <div class="col-md-12">
                <div class="box box-primary">
                    <div class="box-header with-border">
                        <h3 class="box-title">Datos Empresa</h3>
                    </div>
                    @using (Ajax.BeginForm("ActuaDatosEmpre", "Empresa", new AjaxOptions { HttpMethod = "POST" }))
                    {
                        @Html.AntiForgeryToken()

                        <form role="form">
                            <div class="box-body">
                                <div class="row">
                                    <div class="col-md-12">
                                        <div class="form-group">
                                            <label>Nombre de la Empresa</label>
                                            <div class="input-group">
                                                <div class="input-group-addon">
                                                    <i class="fa fa-truck"></i>
                                                </div>
                                                <input type="hidden" class="form-control" name="IdEmpresa" value="@Model.IdEmpresa" /><!--Input oculto/Sirve para recuperar el ID-->
                                                <input type="text" placeholder="Nombre Empresa" class="form-control" name="NombreEmpre" value="@Model.NombreEmpre" required />
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-5">
                                        <div class="form-group">
                                            <label>Teléfono</label>
                                            <div class="input-group">
                                                <div class="input-group-addon">
                                                    <i class="fa fa-phone"></i>
                                                </div>
                                                <input type="tel" placeholder="Teléfono" class="form-control" data-inputmask='"mask": "(999) 999-9999"' data-mask name="TelefenoEmpre" value="@Model.TelefenoEmpre" required>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-7">
                                        <div class="form-group">
                                            <label>Correo Electronico</label>
                                            <div class="input-group">
                                                <span class="input-group-addon"><i class="fa fa-envelope"></i></span>
                                                <input class="form-control" type="email" name="CorreoEmpre" placeholder="Correo" pattern="^[a-zA-Z0-9.!#$%&'*+/=?^_`{|}~-]+@*@*@[a-zA-Z0-9-]+(?:\.[a-zA-Z0-9-]+)*$" value="@Model.CorreoEmpre" required />
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-12">
                                        <div class="form-group">
                                            <label>Misión</label>
                                            <textarea class="form-control" placeholder="Escribe aquí la misión de la empresa" rows="5" style="width: 100%; height: 87px;" name="MisionEmpre"  required>@Model.MisionEmpre</textarea>
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-12">
                                        <div class="form-group">
                                            <label>Visión</label>
                                            <textarea class="form-control" placeholder="Escribe aquí la visión de la empresa" rows="5" style="width: 100%; height: 87px;" name="VisionEmpre" required>@Model.VisionEmpre</textarea>
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-12">
                                        <div class="form-group">
                                            <label>Valores</label>
                                            <textarea class="form-control" placeholder="Escribe aquí los valores de la empresa" rows="5" style="width: 100%; height: 87px;" name="ValoresEmpre" required>@Model.ValoresEmpre</textarea>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <!-- /.box-body -->
                            <div class="box-footer">
                                <button type="submit" class="btn btn-info pull-right">Editar</button>
                            </div>
                        </form>
                    }

                </div>
            </div>
        </div>
    </section>
</div>

