@model PaperMID.BO.MunicipioBO

@{
    ViewBag.Title = "Municipio";
    Layout = "~/Views/Master/_LayoutAdministrador.cshtml";
}
<div class="ajax-content container-fluid">
    <section class="content-header">
        <h1>
            Municipio
        </h1>
    </section>
    <section class="content container-fluid">
        <div class="row">
            <div class="col-md-12">
                <div class="box box-primary">
                    <div class="box-header with-border">
                        <h3 class="box-title">Datos Municipio</h3>
                    </div>
                    @using (Ajax.BeginForm("Agregar_Municipio", "Municio", new AjaxOptions { HttpMethod = "POST" }))
                    {
                        @Html.AntiForgeryToken()

                        <form role="form">
                            <div class="box-body">
                                <div class="row">
                                    <div class="col-md-8">
                                        <div class="form-group">
                                            <label>Nombre del Municipio</label>
                                            <div class="input-group">
                                                <div class="input-group-addon">
                                                    <i class="fa fa-address-book"></i>
                                                </div>
                                                <input type="text" placeholder="Nombre del Municipio" class="form-control" name="NombreMuni" required />
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-4">
                                        <div class="form-group">
                                            <label>Estado</label>
                                            @Html.DropDownList("IdEstado1", null, htmlAttributes: new { @class = "form-control select2", @style = "width: 100%;" })
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <!-- /.box-body -->
                            <div class="box-footer">
                                <button type="submit" class="btn btn-info pull-right">Guardar</button>
                            </div>
                        </form>
                    }

                </div>
            </div>
        </div>
    </section>
    @{ Html.RenderAction("ListaMunicipios", "Municipio");}
</div>


