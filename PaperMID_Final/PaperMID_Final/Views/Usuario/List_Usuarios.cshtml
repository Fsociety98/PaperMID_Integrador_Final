@using System.Data
@model DataTable
<section class="content">
    <div class="row">
        <div class="col-xs-12">
            <div class="box box-primary">
                <div class="box-header">
                    <h3 class="box-title">Lista Usuarios</h3>
                </div>
                <div class="box-body">
                    <div class="pull-right">
                        <button class="btn btn-info">Descargar Reporte</button>
                    </div>
                    <table id="example2" class="table table-bordered table-hover">
                        <thead>
                            <tr>
                                <th class="text-center">Código</th>
                                <th>Usuario</th>
                                <th>Nombre</th>
                                <th>Apellido Paterno</th>
                                <th>Apellido Materno</th>
                                <th>Teléfono</th>
                                <th>Correo</th>
                                <th class="text-center">Acciones</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (DataRow item in Model.Rows)
                            {
                                <tr id="Fila_@item["IdUsuario"]">
                                    <td class="text-center">@item["IdUsuario"]</td>
                                    <td>@item["Usuario"]</td>
                                    <td>@item["NombreUsu"]</td>>
                                    <td>@item["ApellidoPaternoUsu"]</td>
                                    <td>@item["ApellidoMaternoUsu"]</td>
                                    <td>@item["TelefonoUsu"]</td>
                                    <td>@item["CorreoUsu"]</td>
                                    <td class="td-actions text-center">
                                        <a type="button" rel="tooltip" title="Editar" class="btn btn-success btn-simple btn-xs" href="@Url.Action("Actualizar_Usuario", "Usuario", new { IdUsuario = @item["IdUsuario"] })">
                                            <i class="fa fa-edit"></i>
                                        </a>
                                        <a type="button" rel="tooltip" title="Eliminar" class="btn btn-danger btn-simple btn-xs" href="@Url.Action("Eliminar_Usuario", "Usuario", new { IdUsuario = @item["IdUsuario"] })">
                                            <i class="fa fa-times"></i>
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</section>
