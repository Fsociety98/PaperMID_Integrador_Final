@model PaperMID.BO.PromocionesBO

@{
    ViewBag.Title = "Promociones";
    Layout = "~/Views/Master/_LayoutAdministrador.cshtml";
}
<div class="ajax-content container-fluid">
    <section class="content-header">
        <h1>
            Promociones
        </h1>
    </section>
    <section class="content container-fluid">
        <div class="row">
            <div class="col-md-12">
                <div class="box box-primary">
                    <div class="box-header with-border">
                        <h3 class="box-title">Datos Promoción</h3>
                    </div>
                    @using (Ajax.BeginForm("Agg_Promocion", "Promociones", new AjaxOptions { HttpMethod = "POST" }))
                    {
                        @Html.AntiForgeryToken()

                        <form role="form">
                            <div class="box-body">
                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label>Nombre Promoción</label>
                                            <div class="input-group">
                                                <div class="input-group-addon">
                                                    <i class="fa fa-certificate"></i>
                                                </div>
                                                <input type="text" placeholder="Nombre Promoción" class="form-control" name="NombrePromo" required />
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <label>Descuento</label>
                                        <div class="input-group">
                                            <span class="input-group-addon">
                                                $
                                            </span>
                                            <input type="number" placeholder="Descuento" class="form-control pull-right" name="DescuentoPromo" required>
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label>Proveedor</label>
                                            @Html.DropDownList("IdProve", null, htmlAttributes: new { @class = "form-control select2", @style = "width: 100%;" })
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group ">
                                            <label>Duración De La Promoción</label>
                                            <div class="input-group">
                                                <div class="input-group-addon">
                                                    <i class="fa fa-calendar"></i>
                                                </div>
                                                <input type="text" class="form-control pull-right" id="reservation" name="RangoPromocion" required>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-12">
                                        <div class="form-group">
                                            <label>Descripcion Promoción</label>
                                            <textarea class="form-control" placeholder="Escribe aquí la descripción de la promoción" rows="5" style="width: 100%; height: 87px;" name="DescripcionPromo" required></textarea>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <!-- /.box-body -->
                            <div class="box-footer">
                                <button type="submit" class="btn btn-info pull-right">Guardar</button>
                            </div>
                        </form>
                    }

                </div>
            </div>
        </div>
    </section>
    @{ Html.RenderAction("ListarPromociones", "Promociones");}
</div>

@if (ViewBag.Agregado != null)
{
    <script type="text/javascript">
        window.onload = function () {
            reset();
            alertify.alert("Promoción Agregada con éxito!");
            return false;
        }
    </script>
}
@if (ViewBag.Eliminado != null)
{
    <script type="text/javascript">
        window.onload = function () {
            reset();
            alertify.alert("Promoción Eliminada con éxito!");
            return false;
        }
    </script>
}
@if (ViewBag.Actualizado != null)
{
    <script type="text/javascript">
        window.onload = function () {
            reset();
            alertify.alert("Promoción Actualizada con éxito!");
            return false;
        }
    </script>
}
